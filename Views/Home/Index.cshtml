@{
    Layout = null;
    ViewData["Title"] = "Login Page";
}
@model KCompanyWebApp.Models.MsUser
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KCompanyWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KCompanyWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container mt-5 pt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-4 pt-5">
                <div class="card px-5 py-5">
        
                <h2>login</h2>

                @if (@ViewBag.Message != null)
                {
                    <div style="color:red;">
                        @ViewBag.Message
                    </div>
                }

                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    //this is for create form tag
                    @Html.AntiForgeryToken()
                    // this is for prevent CSRF attack
                    @Html.ValidationSummary(true)

                    <table>
                        <tr>
                            <td>@Html.LabelFor(a => a.UserId)</td>
                            <td>@Html.TextBoxFor(a => a.UserId)</td>
                            <td>@Html.ValidationMessageFor(a => a.UserId)</td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(a => a.Password)
                            </td>
                            <td>
                                @Html.PasswordFor(a => a.Password)
                            </td>
                            <td>
                                @Html.ValidationMessageFor(a => a.Password)
                            </td>
                        </tr>
                        <tr>
                            <td></td>
                            <td>
                                <input class="btn btn-primary active" type="submit" value="Login" />
                            </td>
                            <td></td>
                        </tr>
                    </table>
                }
                </div>
            </div>
        </div>
    </div>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2023 - KCompanyWebApp
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>