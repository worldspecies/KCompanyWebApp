@{
    ViewData["Title"] = "Report Page";
}
@model KCompanyWebApp.Models.TrOrderHdr


<h2>Sales Report</h2>
<ul class="navbar-nav flex-grow-1">
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Report" asp-action="GetSalesReport">Sales Report</a>
    </li>
</ul>

<table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
    <thead class="table-dark">
        <tr>
            <th>OrderNo</th>
            <th>OrderDate</th>
            <th>StoreNo</th>
            <th>CustomerNo</th>
            <th>ProductNo</th>
            <th>ProductDesc</th>
            <th>ProductType</th>
            <th>ProductBrand</th>
            <th>UoM</th>
            <th>COGS</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in ViewBag.ReportData)
        {
            <tr>
                <td>@row.OrderNo.ToString()</td>
                <td>@row.OrderDate.ToString()</td>
                <td>@row.StoreNo.ToString()</td>
                <td>@row.CustomerNo.ToString()</td>
                <td>@row.ProductNo.ToString()</td>
                <td>@row.ProductDesc.ToString()</td>
                <td>@row.ProductType.ToString()</td>
                <td>@row.ProductBrand.ToString()</td>
                <td>@row.UoM.ToString()</td>
                <td>@row.Cogs.ToString()</td>
                <td>@row.Price.ToString()</td>
                <td>@row.Quantity.ToString()</td>
                <td>@row.Total.ToString()</td>
            </tr>
        }
    </tbody>
</table>