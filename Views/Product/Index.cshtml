@{
    ViewData["Title"] = "Product Page";
}
@model KCompanyWebApp.Models.ProductServiceModel

<h2>Product Sparepart</h2>

<table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
    <thead class="table-dark">
        <tr>
            <th>ProductNo</th>
            <th>ProductDesc</th>
            <th>ProductType</th>
            <th>ProductBrand</th>
            <th>UoM</th>
            <th>COGS</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var prod in ViewBag.Products)
        {
            <tr>
                <td>@prod.ProductNo.ToString()</td>
                <td>@prod.ProductDesc.ToString()</td>
                <td>@prod.ProductType.ToString()</td>
                <td>@prod.ProductBrand.ToString()</td>
                <td>@prod.UoM.ToString()</td>
                <td>@prod.Cogs.ToString()</td>
            </tr>
        }
    </tbody>
</table>
