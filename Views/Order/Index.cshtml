@{
    ViewData["Title"] = "Order Page";
}
@model KCompanyWebApp.Models.TrOrderHdr

<h2>Order</h2>

@if (@ViewBag.Message != null)
{
    <div style="color:red;">
        @ViewBag.Message
    </div>
}

@if (ViewBag.EmployeeRole != "WORKSHOPMAN" || ViewBag.EmployeeRole != "STOREMAN")
{
    <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="Add" title="Add">Add</a>
}
<table class="table table-striped table-hover" cellpadding="0" cellspacing="0">
    <thead class="table-dark">
        <tr>
            <th>OrderNo</th>
            <th>OrderDate</th>
            <th>StoreNo</th>
            <th>AreaNo</th>
            <th>SalesmanNo</th>
            <th>CustomerNo</th>
            <th>GrandTotal</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var ord in ViewBag.Orders)
        {
            <tr>
                <td>@ord.OrderNo.ToString()</td>
                <td>@ord.OrderDate.ToString()</td>
                <td>@ord.StoreNo.ToString()</td>
                <td>@ord.AreaNo.ToString()</td>
                <td>@ord.SalesmanNo.ToString()</td>
                <td>@ord.CustomerNo.ToString()</td>
                <td>@ord.GrandTotal.ToString()</td>
                <td>
                    <a class="btn btn-primary" asp-area="" asp-controller="OrderDetails" asp-action="Index" asp-route-OrderNo="@ord.OrderNo.ToString()" title="Edit">Details</a>
                    @if (ViewBag.EmployeeRole != "WORKSHOPMAN" || ViewBag.EmployeeRole != "STOREMAN"){
                        <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="Edit" asp-route-OrderNo="@ord.OrderNo.ToString()" title="Edit">Edit</a>
                        <a class="btn btn-primary" asp-area="" asp-controller="Order" asp-action="Void" asp-route-OrderNo="@ord.OrderNo.ToString()" title="Void">Void</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
